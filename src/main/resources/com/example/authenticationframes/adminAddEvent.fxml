<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="640.0" prefWidth="1272.0"
            style="-fx-background-color: #0C131D;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.authenticationframes.AdminAddEventController">

   <children>
      <ImageView fitHeight="640.0" fitWidth="1272.0" layoutY="-7.0" opacity="0.6" AnchorPane.bottomAnchor="7.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="-7.0">
         <image>
            <Image url="@../../../background.images/img_1.png" />
         </image>
      </ImageView>

      <!-- Event Entry Fields -->
      <Pane layoutX="69.0" layoutY="69.0" prefHeight="547.0" prefWidth="1182.0">
         <children>
            <Text fill="WHITE" layoutX="2.0" layoutY="72.0" text="Event Name">
               <font><Font size="22.0" /></font>
            </Text>
            <TextField fx:id="eventNameField" layoutX="174.0" layoutY="43.0" prefHeight="40.0" prefWidth="387.0"
                       style="-fx-font-size: 16; -fx-font-family: dubai; -fx-background-color: #373737; -fx-text-fill: white;" />

            <Text fill="WHITE" layoutX="619.0" layoutY="72.0" text="Event Code">
               <font><Font size="22.0" /></font>
            </Text>
            <TextField fx:id="eventCodeField" layoutX="751.0" layoutY="43.0" prefHeight="40.0" prefWidth="387.0"
                       style="-fx-font-size: 16; -fx-font-family: dubai; -fx-background-color: #373737; -fx-text-fill: white;" />

            <Text fill="WHITE" layoutY="141.0" text="Location">
               <font><Font size="22.0" /></font>
            </Text>
            <TextField fx:id="locationField" layoutX="174.0" layoutY="111.0" prefHeight="40.0" prefWidth="387.0"
                       style="-fx-font-size: 16; -fx-font-family: dubai; -fx-background-color: #373737; -fx-text-fill: white;" />

            <Text fill="WHITE" layoutX="619.0" layoutY="141.0" text="Date/Time">
               <font><Font size="22.0" /></font>
            </Text>
            <TextField fx:id="dateTimeField" layoutX="751.0" layoutY="111.0" prefHeight="40.0" prefWidth="387.0"
                       style="-fx-font-size: 16; -fx-font-family: dubai; -fx-background-color: #373737; -fx-text-fill: white;" />

            <Text fill="WHITE" layoutX="2.0" layoutY="212.0" text="Capacity">
               <font><Font size="22.0" /></font>
            </Text>
            <TextField fx:id="capacityField" layoutX="174.0" layoutY="180.0" prefHeight="40.0" prefWidth="387.0"
                       style="-fx-font-size: 16; -fx-font-family: dubai; -fx-background-color: #373737; -fx-text-fill: white;" />

            <Text fill="WHITE" layoutX="619.0" layoutY="213.0" text="Cost">
               <font><Font size="22.0" /></font>
            </Text>
            <TextField fx:id="costField" layoutX="751.0" layoutY="180.0" prefHeight="40.0" prefWidth="387.0"
                       style="-fx-font-size: 16; -fx-font-family: dubai; -fx-background-color: #373737; -fx-text-fill: white;" />

            <Text fill="WHITE" layoutX="2.0" layoutY="276.0" text="Description">
               <font><Font size="22.0" /></font>
            </Text>
            <TextField fx:id="descriptionField" layoutX="174.0" layoutY="248.0" prefHeight="45.0" prefWidth="964.0"
                       style="-fx-font-size: 16; -fx-font-family: dubai; -fx-background-color: #373737; -fx-text-fill: white;" />

            <Text fill="WHITE" layoutX="618.0" layoutY="276.0" text="Enrollment">
               <font><Font size="22.0" /></font>
            </Text>
            <TextField fx:id="enrollmentField" layoutX="751.0" layoutY="248.0" prefHeight="40.0" prefWidth="387.0"
                       style="-fx-font-size: 16; -fx-font-family: dubai; -fx-background-color: #373737; -fx-text-fill: white;" />
         </children>
      </Pane>

      <!-- Add Event Button -->
      <Button fx:id="addEventButton" layoutX="526.0" layoutY="456.0" mnemonicParsing="false"
              prefHeight="78.0" prefWidth="343.0" style="-fx-background-color: #193355; -fx-font-size: 20;"
              text="Add Event" textFill="WHITE">
         <font>
            <Font name="Dubai Bold" size="20.0" />
         </font>
         <effect>
            <DropShadow height="31.0" offsetX="-2.0" offsetY="1.0" radius="16.0" width="35.0" />
         </effect>
      </Button>

      <!-- Cancel Button -->
      <Button fx:id="cancelButton" layoutX="526.0" layoutY="545.0" mnemonicParsing="false"
              prefHeight="30.0" prefWidth="343.0" style="-fx-background-color: #193355; -fx-font-size: 14;"
              text="Cancel" textFill="WHITE">
         <font>
            <Font name="Dubai Bold" size="14.0" />
         </font>
         <effect>
            <DropShadow height="31.0" offsetX="-2.0" offsetY="1.0" radius="16.0" width="35.0" />
         </effect>
      </Button>
   </children>
</AnchorPane>
